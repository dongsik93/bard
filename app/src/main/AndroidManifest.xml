<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bard">

    <!-- 읽기/쓰기 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".BardBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bard">
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- add -->
        <activity android:name=".presentation.add.AddActivity" />

        <!-- note -->
        <activity android:name=".presentation.note.NoteActivity" />

        <!-- detail -->
        <activity android:name=".presentation.detail.DetailActivity" />

        <!-- card -->
        <activity android:name=".presentation.card.CardActivity" />
    </application>

</manifest>